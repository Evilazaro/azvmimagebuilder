{
    "type": "Microsoft.VirtualMachineImages/imageTemplates",
    "apiVersion": "2022-02-14",
    "location": "<region>",
    "dependsOn": [],
    "tags": {
        "imagebuilderTemplate": "Windows11Enterprise",
        "userIdentity": "enabled",
        "Division": "IT",
        "Environment": "Engineer-Workstation"
    },
    "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
            "<imgBuilderId>": {}
        }
    },
    "properties": {
        "buildTimeoutInMinutes": 100,
        "vmProfile": {
            "vmSize": "Standard_E4as_v5",
            "osDiskSizeGB": 128
        },
        "source": {
            "type": "PlatformImage",
            "publisher": "microsoftwindowsdesktop",
            "offer": "windows-11",
            "sku": "win11-22h2-ent",
            "version": "latest"
        },
        "customize": [
            {
                "type": "PowerShell",
                "inline": [
                    "wsl --install"
                ],
                "name": "InstallWSL"
            },
            {
                "type": "WindowsUpdate",
                "searchCriteria": "IsInstalled=0",
                "filters": [
                    "exclude:$_.Title -like '*Preview*'",
                    "include:$true"
                ],
                "updateLimit": 40
            },
            {
                "type": "PowerShell",
                "scriptUri": "https://raw.githubusercontent.com/Evilazaro/DigitalAppInnovation-Demos/main/DevOps/Continuous-Operations/DevBox/VMImageCustomization/InstallChocolatey.ps1",
                "name": "InstallChocolatey"
            },
            {
                "type": "PowerShell",
                "inline": [
                    "choco install git"
                ],
                "name": "InstallGit"
            },
            {
                "type": "PowerShell",
                "inline": [
                    "choco install docker-desktop"
                ],
                "name": "InstallDocker"
            },
            {
                "type": "PowerShell",
                "inline": [
                    "choco install vscode"
                ],
                "name": "InstallVSCode"
            },
            {
                "type": "PowerShell",
                "inline": [
                    "git clone https://github.com/Evilazaro/eShopOnContainers.git c:\\eShopOnContainers"
                ],
                "name": "CloneRepo"
            }
        ],
        "distribute": [
            {
                "type": "ManagedImage",
                "imageId": "/subscriptions/<subscriptionID>/resourceGroups/<rgName>/providers/Microsoft.Compute/images/<imageName>",
                "location": "<region>",
                "runOutputName": "<runOutputName>",
                "artifactTags": {
                    "source": "azVmImageBuilder",
                    "baseosimg": "Windows11-Enterprise"
                }
            }
        ]
    }
}
